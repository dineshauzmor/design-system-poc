{
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "react-jsx",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["es6"],
    "types": [
      "node"
    ]
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.stories.ts*"]
}
